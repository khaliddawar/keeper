  "screenshots": [
    {
      "src": "screenshots/desktop-wide.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ThoughtKeeper Desktop Dashboard"
    },
    {
      "src": "screenshots/mobile-narrow.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "ThoughtKeeper Mobile Interface"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://thoughtkeeper.app/"
    }
  ],
  "prefer_related_applications": false,
  "shortcuts": [
    {
      "name": "New Task",
      "short_name": "Task",
      "description": "Create a new task quickly",
      "url": "/tasks/new",
      "icons": [
        {
          "src": "icons/shortcut-task.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "New Notebook",
      "short_name": "Notebook",
      "description": "Create a new notebook",
      "url": "/notebooks/new",
      "icons": [
        {
          "src": "icons/shortcut-notebook.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "View productivity dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Search",
      "short_name": "Search",
      "description": "Search all content",
      "url": "/search",
      "icons": [
        {
          "src": "icons/shortcut-search.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": [
            "text/plain",
            ".txt",
            "text/markdown",
            ".md",
            "application/json",
            ".json",
            "text/csv",
            ".csv"
          ]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+thoughtkeeper",
      "url": "/protocol-handler?url=%s"
    }
  ],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui"
  ],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/plain": [".txt"],
        "text/markdown": [".md"],
        "application/json": [".json"],
        "text/csv": [".csv"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      }
    }
  ],
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
